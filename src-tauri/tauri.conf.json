{
  "productName": "FTLL",
  "version": "0.2.10-alpha",
  "identifier": "com.ftl-launcher.stable",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm run dev",
    "beforeBuildCommand": "pnpm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FTLL",
        "width": 975,
        "minWidth": 950,
        "height": 700,
        "minHeight": 680,
        "resizable": true,
        "transparent": true,
        "decorations": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis",
      "updater"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "steam_api64.dll",
      "steam_api64.lib"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU4NkFBNTNFNUE5NEYwNEEKUldSSzhKUmFQcVZxNk9heHg1SG5zTWFOeXZBRk90c29BOWZ0bjZEcXhFNUowNTJrd2tqcmJ1Q0QK",
      "endpoints": [
        "https://api.ftl-launcher.com/v1/releases/stable/manifest"
      ]
    }
  },
  "$schema": "../node_modules/@tauri-apps/cli/schema.json"
}
